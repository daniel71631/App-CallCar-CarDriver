<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="地圖叫車訂單資訊"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="36sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewMapCarDetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/etxtMapCarCaseFares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView33"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="價格"
                android:textSize="24sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtMapCarClientDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignStart="@+id/txtMapCarLocation"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtMapCarLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView33"
                android:layout_alignBottom="@+id/textView33"
                android:layout_alignStart="@+id/txtMapCarClientName"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtMapCarClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView32"
                android:layout_alignBottom="@+id/textView32"
                android:layout_marginStart="55dp"
                android:layout_toEndOf="@+id/textView32"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:text="乘客名字"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView32"
                android:layout_marginTop="57dp"
                android:text="乘客搭車地點"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView33"
                android:layout_marginTop="57dp"
                android:text="乘客目的地"
                android:textSize="24sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="是否接單"
        android:textSize="24sp"
        android:layout_below="@+id/cardViewMapCarDetail"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnMapCarDriverYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="是"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:id="@+id/btnMapCarDriverNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnMapCarDriverYes"
        android:layout_toEndOf="@+id/textView6"
        android:text="否" />

</RelativeLayout>