<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.cardriver.MainActivity">

    <EditText

        android:id="@+id/etxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#e1ea9a"
        android:drawableStart="@mipmap/man"
        android:ems="15"
        android:hint="帳號"
        android:inputType="text"
        android:layout_above="@+id/etxt2"
        android:layout_alignStart="@+id/etxt2" />

    <EditText
        android:id="@+id/etxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:background="#e1ea9a"
        android:drawableStart="@mipmap/password"
        android:ems="15"
        android:hint="密碼"
        android:inputType="textPassword"
        android:layout_above="@+id/btnRig"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnRig"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="58dp"
        android:background="@mipmap/loggin"
        android:textSize="18sp"
        android:layout_above="@+id/btn1"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="註冊"
        android:textSize="18sp"
        android:layout_below="@+id/etxt2"
        android:layout_alignEnd="@+id/etxt2"
        android:layout_marginEnd="41dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnRig"
        android:layout_alignEnd="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:text="忘記密碼"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="test"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/newtitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtNewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="your best choice"
        android:textSize="24sp" />


</RelativeLayout>
