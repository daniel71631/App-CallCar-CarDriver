<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="快速叫車訂單資訊"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="36sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView32"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="乘客名字"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView32"
                android:layout_marginTop="53dp"
                android:text="乘客搭車地點"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtCaseClientname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView33"
                android:layout_marginStart="36dp"
                android:layout_toEndOf="@+id/textView32"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtCaseDetailClientLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView33"
                android:layout_alignBottom="@+id/textView33"
                android:layout_alignStart="@+id/txtCaseClientname"
                android:text="TextView"
                android:textSize="24sp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="是否接單"
        android:textSize="24sp"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnMapCarDriverYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView6" />

    <Button
        android:id="@+id/btnNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnMapCarDriverYes"
        android:layout_toEndOf="@+id/textView6"
        android:text="否" />
</RelativeLayout>