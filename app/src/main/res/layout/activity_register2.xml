<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.cardriver.Register2Activity">

    <EditText
        android:id="@+id/enametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:width="300dp"
        android:ems="10"
        android:hint="姓名"
        android:inputType="text" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="性別"
        android:textSize="18sp"
        android:layout_below="@+id/enametxt"
        android:layout_alignStart="@+id/enametxt" />

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_alignTop="@+id/txt2"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:id="@+id/ephonetxt"
        android:width="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="手機"
        android:inputType="phone"
        android:layout_below="@+id/spin1"
        android:layout_alignStart="@+id/txt2" />

    <Button
        android:id="@+id/btnRig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="註冊"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ephonetxt"
        android:layout_below="@+id/ephonetxt"
        android:layout_marginTop="42dp"
        android:text="營業登記證號"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etxtcopse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/ephonetxt" />

    <TextView
        android:id="@+id/txtsex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt2"
        android:layout_alignTop="@+id/txt2"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/txt2" />

</RelativeLayout>
