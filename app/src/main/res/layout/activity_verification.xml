<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.cardriver.Verification">


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etxt1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etxt1"
        android:layout_marginTop="206dp"
        android:text="請輸入驗證碼"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:text="確定" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etxt1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="(請到註冊信箱查看)"
        android:textSize="18sp" />

</RelativeLayout>
